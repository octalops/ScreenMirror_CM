<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/backGroundColor"
    android:paddingBottom="18dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/imgTv"
        android:layout_width="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_tv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtDevicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Device Name"
        android:includeFontPadding="false"
        android:textColor="@color/textColor"
        android:layout_marginStart="10dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintStart_toEndOf="@id/imgTv"
        app:layout_constraintTop_toTopOf="@+id/imgTv"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:includeFontPadding="false"
        android:layout_height="wrap_content"
        android:text="Connect this device"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgTv"
        app:layout_constraintStart_toStartOf="@id/txtDevicName"
        app:layout_constraintTop_toBottomOf="@+id/txtDevicName" />


</androidx.constraintlayout.widget.ConstraintLayout>