<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VideoCasting" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/backGroundColor</item>
        <item name="colorOnPrimary">@color/primaryColor</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueColor</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="colorOnSurface">@color/switchTrack</item>
        <item name="colorSurface">@color/switchThumb</item>
    </style>

    <style name="Theme.VideoCasting.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.VideoCasting.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.VideoCasting.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>